input#artName(type='text')   
button(type='button' onclick='searchByName()') search artwork by name
br
br
input#artist(type='text')   
button(type='button' onclick='searchByArtist()') search artwork by artist
br
br
input#category(type='text')   
button(type='button' onclick='searchByCategory()') search artwork by category
br  
br 
button#upgrade(type="button" onclick='upgrade()') upgrade to artist
br
br
button#logout(type="button" onclick='logout()') logout
