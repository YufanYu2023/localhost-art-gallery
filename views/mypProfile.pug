doctype html

h1= result.name

a(href=`/myProfile/artwork`) view all art works
br
br
a(href=`/myProfile/profiles`) view other user's profile
br
br
p
    b liked artwork: 
    a(href=`/myProfile/artwork/art/${result.liked}`)=result.liked
p
    b followed user: 
    a(href=`/myProfile/profiles/${result.follows}`)=result.follows
p
    b reviewed: 
    a(href=`/myProfile/artwork/art/${result.reviewed}`)=result.reviewed
p
    b registered workshop: 
    =result.registeredWorkShop
